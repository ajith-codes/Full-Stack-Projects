{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true,  // Enables decorator support
      "emitDecoratorMetadata": true    // Enables metadata for decorators
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  